---
import Header from "@components/header/Header.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { Gallery } from "@components/gallery/Gallery";
import Footer from "@components/Footer/Footer.astro";
---

<MainLayout
	title="Visualify | Photos"
	description="View and download high-quality free images and videos with our platform powered by the Pexels API."
>
	<main class="min-h-screen">
		<Header />

		<section class="flex gap-2 md:gap-8 justify-center p-8">
			<a
				href="/"
				class="px-5 py-2 text-white text-lg bg-black/90 rounded-3xl font-semibold"
			>
				Photos
			</a>
			<a href="/videos" class="px-5 py-2 text-gray-600 text-lg font-semibold">
				Videos
			</a>
			<a
				href="/favorites"
				class="px-5 py-2 text-gray-600 text-lg font-semibold"
			>
				Favorites
			</a>
		</section>

		<Gallery mediaItem="Photos" client:load />
	</main>

	<Footer />
</MainLayout>
